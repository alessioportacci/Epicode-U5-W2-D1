@model Epicode_U5_W2_D1.Models.CredenzialiClienteModel

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row row-cols-1">
        <div>
            @Html.LabelFor(m => m.username, htmlAttributes: new { @class = "form-label" })
            @Html.EditorFor(m => m.username, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.username)
        </div>

        <div>
            @Html.LabelFor(m => m.password, htmlAttributes: new { @class = "form-label" })
            @Html.EditorFor(m => m.password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
            @Html.ValidationMessageFor(m => m.password)
        </div>
    </div>

    <input type="submit" value="Accedi" class="btn btn-primary mt-2" />

    if (ViewBag.Message != null)
    {
        <p class="text-danger"> @ViewBag.Message </p>
    }

}