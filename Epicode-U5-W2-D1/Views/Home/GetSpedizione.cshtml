@model Epicode_U5_W2_D1.Models.GetSpedizioneModel

@{
    ViewBag.Title = "GetSpedizione";
}

<h1 class="mb-3"> Traccia il tuo pacco! </h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row row-cols-1 row-cols-md-2 mt-5">
        <div>
            <div class="mt-4">
                @Html.LabelFor(m => m.Id, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(m => m.Id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Id)
            </div>

            <div>
                @Html.LabelFor(m => m.CF, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(m => m.CF, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.CF)
            </div>
            <input type="submit" value="Cerca" class="btn btn-primary mt-4" />
        </div>

        <div>
            <img src="~/Content/Assets/Imgs/Traccia.jpg" class="w-100 rounded shadow" />
        </div>
    </div>







    if (ViewBag.Message != null)
    {
        <p class="text-danger"> @ViewBag.Message </p>
    }

}